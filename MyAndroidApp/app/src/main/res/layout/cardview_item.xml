            <!--cardview:layout_constraintTop_toTopOf="parent" />-->

        <RatingBar
            android:id="@+id/Restuarnt_rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="1.0"
            android:theme="@style/RatingBar"
            cardview:layout_constraintStart_toEndOf="@+id/Resturant_ImageId"
            cardview:layout_constraintTop_toBottomOf="@+id/Restuarnt_Name" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="80dp"
            android:layout_height="18dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:labelFor="@+id/hros"
            android:text="Open now"
            android:textColor="#FF000000"
            android:textSize="12sp"
            cardview:layout_constraintStart_toEndOf="@+id/Resturant_ImageId"
            cardview:layout_constraintTop_toBottomOf="@+id/Restuarnt_rating" />

        <TextView
            android:id="@+id/Restuarnt_hours"
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:labelFor="@+id/hros"
            android:text="NA"
            android:textColor="#FF000000"
            android:textSize="12sp"
            cardview:layout_constraintStart_toEndOf="@+id/textView"
            cardview:layout_constraintTop_toBottomOf="@+id/away_value" />

        <TextView
            android:id="@+id/away_value"
            android:layout_width="60dp"
            android:layout_height="18dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:labelFor="@+id/hros"
            android:text="NA"
            android:textColor="#FF000000"
            android:textSize="12sp"
            cardview:layout_constraintStart_toEndOf="@+id/Restuarnt_rating"
            cardview:layout_constraintTop_toBottomOf="@+id/Restuarnt_Name" />


