<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardRestId"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="03dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="2dp"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    android:focusable="true">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_gravity="start">

        <ImageView
            android:id="@+id/Resturant_ImageId"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@mipmap/rest"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Restuarnt_Name"
            android:layout_width="232dp"
            android:layout_height="35dp"
            android:inputType="textNoSuggestions"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:singleLine="false"
            android:text="Name"
            android:textColor="#FF000000"
            android:textSize="14sp"
            cardview:layout_constraintStart_toEndOf="@+id/Resturant_ImageId"
            cardview:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Restuarnt_formatted_address"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="15dp"
            android:paddingEnd="2dp"
            android:paddingStart="8dp"
            android:singleLine="false"
            android:text="Address"
            android:textColor="#FF000000"
            android:textSize="12sp"
            cardview:layout_constraintBottom_toBottomOf="parent"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toBottomOf="@+id/Resturant_ImageId" />

